<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MvvmToolkitExmple.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MvvmToolkitExmple.View"
    Shell.FlyoutBehavior="Disabled"
    Title="MvvmToolkitExmple">

    <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate local:Accueil}"
        Route="MainPage" />
    
    <ShellContent
     Title="CaculPage"
     ContentTemplate="{DataTemplate local:CaculPage}"
     Route="CaculPage" />

    <ShellContent
      Title="Random weather page"
      ContentTemplate="{DataTemplate local:RandomWeathers}"
      Route="RandomWeatherPage" 
    />  


</Shell>
